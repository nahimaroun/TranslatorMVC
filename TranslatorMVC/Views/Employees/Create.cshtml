@model TranslatorMVC.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create Employee</h1>

 <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Emp_Name" class="control-label">Name</label>
                <input asp-for="Emp_Name" class="form-control" />
                <span asp-validation-for="Emp_Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Emp_LastName" class="control-label">LastName</label>
                <input asp-for="Emp_LastName" class="form-control" />
                <span asp-validation-for="Emp_LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Emp_Type" class="control-label">Type</label>
                <input asp-for="Emp_Type" class="form-control" />
                <span asp-validation-for="Emp_Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Emp_Notes" class="control-label">Notes</label>
                <input asp-for="Emp_Notes" class="form-control" />
                <span asp-validation-for="Emp_Notes" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Emp_Active" />  Active
                </label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
