@model TranslatorMVC.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
         Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emp_Name)
        </dd>
        <dt class = "col-sm-2">
        Last Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emp_LastName)
        </dd>
        <dt class = "col-sm-2">
        Type:      
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emp_Type)
        </dd>
        <dt class = "col-sm-2">
          Notes:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emp_Notes)
        </dd>
        <dt class = "col-sm-2">
          Active:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emp_Active)
        </dd>
        
        <dt class = "col-sm-2">
           Created Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emp_CreateDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.EmployeeID">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
