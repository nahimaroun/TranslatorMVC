@model IEnumerable<TranslatorMVC.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />

<script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>

<h1>Employees Table</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>
<table class="table" id="EmployeesTable">
    <thead>
        <tr>
            <th>EmployeeID</th>
            <th>Name</th>
            <th>LastName</th>
            <th>Type</th>
            <th>Notes</th>
            <th>Active</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_CreateDate)
            </td>
            
            <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.EmployeeID">Edit</a> |
                    <a asp-action="Details" class="btn btn-dark" asp-route-id="@item.EmployeeID">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.EmployeeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $('#EmployeesTable').DataTable();
</script>  